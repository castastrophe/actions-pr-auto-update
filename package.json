{
  "name": "actions-pr-auto-update",
  "version": "1.1.0",
  "description": "A configurable GitHub Action to keep pull requests up-to-date.",
  "license": "MIT",
  "author": "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
  "contributors": [
    "Max Komarychev"
  ],
  "homepage": "https://github.com/castastrophe/actions-pr-auto-update#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/castastrophe/actions-pr-auto-update.git"
  },
  "bugs": {
    "url": "https://github.com/castastrophe/actions-pr-auto-update/issues"
  },
  "main": "bin/index.js",
  "files": [
    "bin/index.js"
  ],
  "scripts": {
    "build": "tsc && ncc build -o bin src/index.ts",
    "clean": "rm -rf bin",
    "coverage": "jest --coverage",
    "lint": "yarn lint-staged",
    "precommit": "lint-staged",
    "prepare": "husky || true",
    "presemantic-release": "yarn clean && yarn build",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vercel/ncc": "^0.38.4",
    "colors": "^1.4.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-package-json": "^2.8.0",
    "semantic-release": "^25.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "actions",
    "auto-update",
    "github",
    "pull-request",
    "update"
  ],
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": [
    {
      "type": "github",
      "url": " https://github.com/sponsors/castastrophe"
    },
    {
      "type": "buymeacoffee",
      "url": "https://www.buymeacoffee.com/castastrophe"
    }
  ],
  "lint-staged": {
    "*": "prettier --write",
    "package.json": "prettier-package-json --write",
    "*.ts,__*__/*.ts": "eslint --fix"
  },
  "packageManager": "yarn@4.10.3"
}
